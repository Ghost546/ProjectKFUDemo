<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/fragment_menu_user_info"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fragment_menu_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_first_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_menu_user_info"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/fragment_second_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_first_name_text"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/fragment_third_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_second_name_text"
            android:visibility="gone"/>

        <Button
            android:id="@+id/fragment_menu_log_out_button"
            android:layout_below="@id/fragment_third_name_text"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFAFA"
            android:textColor="#FF0000"
            android:onClick="onClick"
            android:text="@string/log_out"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>